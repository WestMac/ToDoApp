<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style></style>
  </head>
  <body>
    <div class="navbar justify-content-center">
      <ul class="nav justify-content-center">
        <li class="nav-item">
          <a name="create" class="nav-link active createList">Create List</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout" tabindex="-1">Logout</a>
        </li>
      </ul>
    </div>
    <section id="snackbarContainer">

    </section>

    <form action="/list/addList" method="POST">
      <div class="input-group mb-3 listCreate listDisplay justify-content-center">
        <label for="list" class="mb-3 fs-3">List name</label>
        <div class="container d-flex">  
          <input
            type="text"
            class="form-control"
            placeholder="Create new To Do List"
            aria-label="Create new To Do List"
            aria-describedby="button-addon2"
            name="name"
            id="list"
          />
          <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Button</button>
        </div>
      </div>
    </form>

<div class='d-flex flex-row align-self-center justify-content-center mt-5'>

    <% data.forEach(e => {%>
    <div class="d-flex flex-row justify-content-center" name='<%= e.listId %>'>
      <div class="toDoList m-5">
      <div class="d-flex header justify-content-between">
        <div class="autocomplete">
          <i class="bi bi-person-plus editorBox"></i>
          <input type="text" id="addEditors" name="addEditors" class="form-control inputAdd inputEditor invisible" placeholder="Add/Remove editor">
        </div>
  
  
  
        <form action="/list/<%= e.listId %>?_method=DELETE" method="POST" class='deleteList'>
          <button class="btn btn-danger btnDeleteList" type="submit" id="deleteList"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16" name="button">
            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
          </svg></button>
        </form>
  
      </div>
        
    
      <% if(e.isAuthor) {%>
        <div class='author'> 
          <p class="authorField"><strong>Author</strong> <%= e.username %></p>
        </div>
        <% } %>
    
     <div class='editors'>
      <strong>Editors:</strong> 
      <% e.editors.forEach(edit => { %>
       <% let firstLetters = edit.match(/\b(\w)/g) %>
       <% acronym = firstLetters.join('') %>

        <span class="editorCircle" title="<%=edit%>"><%= acronym %></span>
         <% }) %>
    </div>
        <h1 class="text-center"> <%= e.name %> </h1>
       
          <ul>
          <% e.listItems.forEach(item => {  %>
          <li class="toDoElement d-flex flex-row text-break">
            <div class="divCheckbox align-self-center">
              <input class="checkboxElement me-3 form-check-input me-1" type="checkbox" />
            </div>
            <p class='toDoText'><%= item.text %> </p>
            </li>
            <textarea name="<%= item.id %>" cols="20" rows="2" class='hidden toDoElementEdit'></textarea>
          <form action="/list/toDo/<%= item.id %>?_method=DELETE" method="POST">
          <!-- <button type='submit'>delete</button> -->
        </form>
          <% }) %>
        </ul>
        <div class="input-group mb-3 mt-2 addDiv d-flex">        
          <form action="/list/<%=e.listId%>" method="POST" class="">
            <input type="text" class="form-control inputAdd" placeholder="Add new" name="toDo" />
          </form>
        </div>
      </div>
    </div>
    <% })%>
  </div>
  </body>
  <script 
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" 
  integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
   crossorigin="anonymous"></script>

  <script src="./script.js"></script>

</html>
