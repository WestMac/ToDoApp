<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="/userStyle.css" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div class="navbar justify-content-center">
      <ul class="nav justify-content-center">
        <li class="nav-item">
          <a class="nav-link" href="/">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/register">Register</a>
      </ul>
    </div>




    <div class="wrapper fadeInDown">
      <div id="formContent">
        <h1 class="fadeInDown">Register</h1>
        <% if(locals.errorObject) { %>
          <p class="alert alert-danger" role="alert">
          <% for(let [error,message] of Object.entries(locals.errorObject)) { %>
          <span style ="text-transform:capitalize"><%= error %>: </span><span> <%= message %> </span> <br>
        
          <% } %>  
          </p>
        <% } %>
        <form action="/register" method="POST" class="form needs-validation" novalidate>
          <input type="text" id="username" class="fadeIn second form-control" name="username" placeholder="username" minlength="3" required>
        <div class="invalid-feedback">
            Minimum is 3 characters
          </div>
          <input type="password" id="password" class="fadeIn third form-control" name="password" placeholder="password" minlength="8" required>
        <div class="invalid-feedback">
            Password has to be at least 8 characters long
          </div>
          <input type="email" id="email" class="fadeIn third form-control" name="email" placeholder="email" required>
            <div class="invalid-feedback">
            Email has to be in valid format xxx@xx.xx
          </div>
          <input type="submit" class="fadeIn fourth" value="Register">
        </form>
    
       
        
    
      </div>
    </div>
  </body>
  <script src="/../../login.js"></script>
</html>
